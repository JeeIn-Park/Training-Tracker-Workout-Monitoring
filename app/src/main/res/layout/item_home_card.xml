<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="3dp"
        android:layout_marginBottom="6dp"
        android:foregroundGravity="center"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:cardCornerRadius="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="2sp">


            <TextView
                android:id="@+id/PersonalRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16sp"
                android:paddingVertical="2sp"
                android:paddingHorizontal="4sp"
                android:gravity="center"
                android:text="PersonalRecord"
                android:textColor="?attr/colorOnBackground"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:gravity="left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16sp"
                android:layout_marginVertical="8sp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/PersonalRecord">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ExerciseName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="2sp"
                        android:paddingHorizontal="4sp"
                        android:text="ExerciseName"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/Tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="2sp"
                        android:paddingHorizontal="4sp"
                        android:text="Tag"
                        android:textColor="?attr/colorPrimaryVariant"
                        android:textSize="16sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/LastExercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2sp"
                    android:paddingHorizontal="4sp"
                    android:text="Last exercise"
                    android:textColor="?attr/colorPrimaryVariant"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/MainMuscle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2sp"
                    android:paddingHorizontal="4sp"
                    android:text="MainMuscle"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/SubMuscle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2sp"
                    android:paddingHorizontal="4sp"
                    android:text="SubMuscle"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="16sp" />

            </LinearLayout>

            <!--TODO : width 0dp to date-->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>