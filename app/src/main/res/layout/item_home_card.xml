<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="3dp"
        android:layout_marginBottom="6dp"
        android:foregroundGravity="center"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:cardCornerRadius="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ExerciseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="4sp"
                android:paddingLeft="16sp"
                android:paddingRight="4sp"
                android:textSize="12sp"
                android:text="ExerciseName"
                android:textColor="?attr/colorOnBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/Tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="4sp"
                android:paddingLeft="4sp"
                android:paddingRight="16sp"
                android:textSize="12sp"
                android:text="Tag"
                android:textColor="?attr/colorPrimaryVariant"
                app:layout_constraintStart_toEndOf="@+id/ExerciseName"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/LastExercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16sp"
                android:paddingBottom="4sp"
                android:textSize="12sp"
                android:text="Last exercise"
                android:textColor="?attr/colorPrimaryVariant"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ExerciseName" />

            <TextView
                android:id="@+id/MainMuscle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16sp"
                android:paddingBottom="4sp"
                android:text="MainMuscle"
                android:textColor="?attr/colorOnBackground"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LastExercise" />
<!--TODO : width 0dp to date-->


            <TextView
                android:id="@+id/SubMuscle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16sp"
                android:paddingBottom="4sp"
                android:textSize="12sp"
                android:text="SubMuscle"
                android:textColor="?attr/colorOnBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/MainMuscle" />


            <TextView
                android:id="@+id/PersonalRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16sp"
                android:textSize="11sp"
                android:gravity="center"
                android:text="PersonalRecord"
                android:textColor="?attr/colorOnBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>